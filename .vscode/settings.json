{
  "editor.insertSpaces": true,
  "[ruby]": {
    "editor.tabSize": 2
  },
  "[markdown]": {
    "editor.tabSize": 4
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "ruby.format": "rubocop",
  "ruby.lint": {
    "rubocop": {
      "useBundler": true
    }
  },
  "ruby.useBundler": true
}
